<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rounded_white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp">

        <!-- Ligne 1 : photo profil auteur + titre + badge validé -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/ivAuthorProfile"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/user_circle"
                android:scaleType="centerCrop"
                android:layout_marginEnd="10dp"
                android:visibility="gone"
                android:contentDescription="Photo de profil de l'auteur" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="Non identifié" />

            <ImageView
                android:id="@+id/ivValidatedBadge"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_check"
                android:scaleType="fitCenter"
                android:layout_marginStart="8dp"
                android:visibility="gone"
                android:contentDescription="Photo validée par un administrateur" />

        </LinearLayout>

        <!-- Ligne 2 : image zoomable -->
        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/photoView"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:scaleType="fitCenter"
            android:layout_marginBottom="6dp" />

        <!-- Ligne 3 : date -->
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/grey"
            android:layout_marginBottom="10dp"
            android:text="Date inconnue" />

        <!-- Ligne 4 : description taxonomique -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:lineSpacingExtra="3dp"
            android:layout_marginBottom="14dp"
            android:text="Famille : —\nGenre : —\nEspèce : —" />

        <!-- Ligne 5 : reprendre recensement -->
        <Button
            android:id="@+id/btnResumeCensus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reprendre le recensement"
            android:textAllCaps="false"
            android:layout_marginBottom="12dp"
            android:visibility="gone"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        <!-- Ligne 6 : Valider | Retour | Supprimer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="3">

            <Button
                android:id="@+id/btnValidate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Valider"
                android:textAllCaps="false"
                android:textSize="13sp"
                android:layout_marginEnd="4dp"
                android:visibility="gone"
                style="@style/Widget.MaterialComponents.Button" />

            <Button
                android:id="@+id/btnBack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Retour"
                android:textAllCaps="false"
                android:textSize="13sp"
                android:layout_marginHorizontal="4dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Supprimer"
                android:textAllCaps="false"
                android:textSize="13sp"
                android:layout_marginStart="4dp"
                android:backgroundTint="@color/red"
                android:textColor="@android:color/white"
                android:visibility="gone"
                style="@style/Widget.MaterialComponents.Button" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
